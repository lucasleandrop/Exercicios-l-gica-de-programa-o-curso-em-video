algoritmo "Ex20CursoEmVideo"
var
   numero : inteiro
inicio
     Escreval("Verificação de número impar ou par.")
     Escreval("-----------------------------------")
     Escreva("Digite o número : ")
     Leia(numero)
     Se (numero % 2 = 0) entao
        Escreval("Este é um número par!")
     Senao
          Escreval("Este é um número ímpar!")
     Fimse
     
fimalgoritmo