algoritmo "Ex5CursoemVideo"
var
   A : caractere
   n1, n2, media: real
inicio
      Escreva("Nome do Aluno : ")
      Leia(A)
      Escreval("1ª nota do aluno ", A)
      Leia(n1)
      Escreval("2ª nota do aluno ", A)
      Leia(n2)
      media <- (n1 + n2) / 2
      Escreva("A média entre as duas nota do aluno ", A, " é ", media)
      

fimalgoritmo